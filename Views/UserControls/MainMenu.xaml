<UserControl x:Class="HSchedule.Views.UserControls.MainMenu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HSchedule.ViewModels.UserControls"
             mc:Ignorable="d" d:Height="1080" d:Width="1960">
    <Grid Background="#fff">
        <!--#region Rows&Columns-->
        <Grid.RowDefinitions>
            <RowDefinition Height="10"/>
            <RowDefinition Height="0.5*"/>
            <RowDefinition Height="4*"/>
            <RowDefinition Height="10"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="1.3*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="10"/>
        </Grid.ColumnDefinitions>
        <!--#endregion-->

        <!--header-->
        <Viewbox Grid.Row="1" Grid.Column="1">
            <TextBlock Text="Уборка"/>
        </Viewbox>
        
        <!--#region header buttons-->
        <StackPanel Grid.Column="2" Grid.Row="1"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    MaxHeight="70"
                    MinHeight="20">
            <!--profile-->
            <Viewbox>
                <Button MaxWidth="60">
                    <Button.Content>
                        <TextBlock Text="профиль"/>
                    </Button.Content>
                </Button>
            </Viewbox>

            <Viewbox>
                <Button MaxWidth="60" Margin="5,0,5,0">
                    <Button.Content>
                        <TextBlock Text="" IsEnabled="False"/>
                    </Button.Content>
                </Button>
            </Viewbox>

            <!--exit-->
            <Viewbox>
                <Button Command="{Binding AppExitCommand}"
                        MaxWidth="60">
                    <Button.Content>
                        <TextBlock Text="выйти"/>
                    </Button.Content>
                </Button>
            </Viewbox>
        </StackPanel>
        <!--#endregion-->
    </Grid>
</UserControl>
